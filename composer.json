{
    "name": "wafwork/wafwork",
    "description": "A lightweight PHP MVC framework inspired by Laravel",
    "type": "project",
    "license": "MIT",
    "keywords": ["framework", "mvc", "php", "lightweight", "laravel"],
    "homepage": "https://github.com/yourusername/wafwork",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/yourusername/wafwork/issues",
        "source": "https://github.com/yourusername/wafwork"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "WAFWork\\": "framework/"
        },
        "files": [
            "app/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4|^8.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"if(!is_dir('storage/logs')){ mkdir('storage/logs', 0755, true); }\"",
            "@php -r \"if(!is_dir('storage/cache')){ mkdir('storage/cache', 0755, true); }\""
        ]
    }
} 